@startuml
title: A true/false question receives a list of answers and assigns points to those who answered correctly

actor actor
participant "aQuestion:Question" as question
participant "type: TrueOrFalse" as type
participant "aPlayer:Player" as player
participant ":Answer" as answer

create question
actor -> question: Question(content: String, type:TrueOrFalse(), options: List<Answer>, theme: String)

loop for numberOfPlayers
create player
actor -> player: Player(name: String, score: Score)
end

loop for each player
actor -> player: answer(aQuestion: Question, chosenOption: String)
activate player
player -> question: choiceOption(chosenOption)

activate question
loop for char in chosenOption: chosenOptions.toCharArray
    loop for option in options
        question -> answer: equals(chosenOption)
        activate answer
        question <<-- answer: true -> chosenAnswers.add(option)
        note left: ArrayList<Answer> chosenAnswers
        end loop
end loop
deactivate answer
player -->> actor: chosenAnswers
deactivate player
actor -> actor: playerAnswers.put(aPlayer, chosenAnswers)
note left: HashMap<Player, ArrayList<Answers>> playerAnswers
end loop
@enduml